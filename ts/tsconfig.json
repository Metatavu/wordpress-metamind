{
  "compilerOptions": {
    "esModuleInterop": true,
    "module": "esnext",
    "lib": [ "es6", "dom" ],
    "noImplicitAny": true,
    "noEmitOnError": true,
    "removeComments": false,
    "sourceMap": true,
    "target": "es5",
    "baseUrl": ".",
    "rootDir": "src",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true
  },
  "exclude": [
    "node_modules"
  ]
}